<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_view_color"
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:cardCornerRadius="4dp"
        app:strokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:alpha=".38"
        android:layout_height="wrap_content"
        android:text="jurabek"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_view_color"
        app:layout_constraintStart_toEndOf="@+id/item_view_color"
        app:layout_constraintTop_toTopOf="@+id/item_view_color" />
    <TextView
        android:id="@+id/item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="12,423ta"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/item_name"
        app:layout_constraintStart_toStartOf="@+id/item_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>